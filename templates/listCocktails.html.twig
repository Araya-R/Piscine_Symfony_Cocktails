{% include "partials/_header.html.twig" %}

<main class="container">
	<h3>Tous les Cocktails:</h3>

	{% for cocktail in cocktails %}
		<div class="cocktail-card">
			
			<img src="{{ cocktail.image}}" width="50%">
			<h3><a href="{{ path('cocktail', { 'id': cocktail.id }) }}">{{ cocktail.nom}}</a></h3>
			<p>{{ cocktail.description }}</p>

			<p>Les ingr√©dients :</p>
			<ul>
				{% for ingredient in cocktail.ingredients %}
					<li>{{ ingredient }}</li>
				{% endfor %}
			</ul>
			<p>{{ cocktail.date_creation | date ('y-m-d') }}</p>
		</div>
	{% endfor %}

</main></body></html>
