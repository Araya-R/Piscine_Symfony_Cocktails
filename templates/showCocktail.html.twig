			<h3>
				<a href="{{ path('cocktail', { 'id': cocktail.id }) }}">{{ cocktail.nom}}</a>
			</h3>
			<p>{{ cocktail.date_creation }}</p>
			<p>{{ cocktail.description }}</p>

