	
	{% for cocktail in cocktails %}
		<div class="cocktail-card">
			
			<img src="{{ cocktail.image}}" >
			<h3><a href="{{ path('cocktail', { 'id': cocktail.id }) }}">{{ cocktail.nom}}</a></h3>
			{# href="{{ path('cocktail') }} ?id = {{cocktail.id}} #}
			<p>{{ cocktail.description }}</p>
			<p>{{ cocktail.date_creation | date ('Y-m-d') }}</p>
		</div>
	{% endfor %}